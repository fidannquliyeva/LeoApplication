<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_2"
    android:orientation="vertical"
    tools:context=".presentation.ui.fragments.loginAuth.SmsLoginFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@drawable/gradient_login">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="#33E0DFDF"
            android:drawableLeft="@drawable/icons8message30"
            android:drawableTint="@color/white"
            android:text="@string/d_st_k"
            android:textSize="12sp"
            android:textColor="@color/textColor" />

        <TextView
            android:id="@+id/txt_sms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_help"
            android:layout_centerHorizontal="true"
            android:text="@string/sms_l_g_l_n_kodu_daxil_edin"
            android:layout_marginTop="25dp"
            android:textColor="@color/textColor"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_sms"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


        <TextView
            android:id="@+id/txt_msg_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/code"
            android:textColor="@color/textColor"
            android:textSize="16sp"
            android:layout_marginEnd="5dp"/>

        <TextView
            android:id="@+id/txt_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_994_555_555_555"
            android:textColor="@color/textColor"
            android:textSize="16sp"
            android:layout_marginEnd="5dp"
            />

            <TextView
                android:id="@+id/txt_msg_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/n_mr_sin_g_nd_rildi"
                android:textColor="@color/textColor"
                android:textSize="16sp"/>
        </LinearLayout>
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/phoneCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="32dp"
        app:cardElevation="4dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/msg_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 0 0 0 0 0"
                    android:textColor="#999999"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.24" />

                <LinearLayout
                    android:id="@+id/noMsgComing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"
                    app:layout_constraintVertical_bias="0.8"
                    app:layout_constraintBottom_toTopOf="@+id/numberPad"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/msg_number">


                    <TextView
                        android:id="@+id/info_msg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:text="@string/sms_g_lmir"
                        android:background="?attr/selectableItemBackground"
                        android:textColor="#757575"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="@+id/info_msg2"
                        app:layout_constraintEnd_toStartOf="@id/info_msg2"
                        app:layout_constraintStart_toStartOf="@id/msg_number"
                        app:layout_constraintTop_toTopOf="@+id/info_msg2" />

                    <TextView
                        android:id="@+id/info_msg2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:background="?attr/selectableItemBackground"
                        android:text="@string/z_ng_sifari_etm_k"
                        android:textColor="@color/textColor"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toTopOf="@+id/numberPad"
                        app:layout_constraintEnd_toEndOf="@+id/msg_number"
                        app:layout_constraintStart_toEndOf="@id/info_msg"
                        app:layout_constraintTop_toBottomOf="@+id/msg_number"
                        app:layout_constraintVertical_bias="0.8" />

                </LinearLayout>



                <GridLayout
                    android:id="@+id/numberPad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="3"
                    android:rowCount="4"
                    android:useDefaultMargins="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <Button
                        android:id="@+id/btn_1"
                        style="@style/KeyButton"
                        android:textColor="@color/textColor"
                        android:background="?attr/selectableItemBackground"
                        android:text="1" />

                    <Button
                        android:id="@+id/btn_2"
                        style="@style/KeyButton"
                        android:textColor="@color/textColor"
                        android:background="?attr/selectableItemBackground"
                        android:text="2" />

                    <Button
                        android:id="@+id/btn_3"
                        style="@style/KeyButton"
                        android:textColor="@color/textColor"
                        android:background="?attr/selectableItemBackground"
                        android:text="3" />

                    <Button
                        android:id="@+id/btn_4"
                        style="@style/KeyButton"
                        android:textColor="@color/textColor"
                        android:background="?attr/selectableItemBackground"
                        android:text="4" />

                    <Button
                        android:id="@+id/btn_5"
                        style="@style/KeyButton"
                        android:textColor="@color/textColor"
                        android:background="?attr/selectableItemBackground"
                        android:text="5" />

                    <Button
                        android:id="@+id/btn_6"
                        style="@style/KeyButton"
                        android:textColor="@color/textColor"
                        android:background="?attr/selectableItemBackground"
                        android:text="6" />

                    <Button
                        android:id="@+id/btn_7"
                        style="@style/KeyButton"
                        android:textColor="@color/textColor"
                        android:background="?attr/selectableItemBackground"
                        android:text="7" />

                    <Button
                        android:id="@+id/btn_8"
                        style="@style/KeyButton"
                        android:textColor="@color/textColor"
                        android:background="?attr/selectableItemBackground"
                        android:text="8" />

                    <Button
                        android:id="@+id/btn_9"
                        style="@style/KeyButton"
                        android:textColor="@color/textColor"
                        android:background="?attr/selectableItemBackground"
                        android:text="9" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_columnWeight="1" />

                    <Button
                        android:id="@+id/btn_0"
                        style="@style/KeyButton"
                        android:textColor="@color/textColor"
                        android:background="?attr/selectableItemBackground"
                        android:text="0" />

                    <Button
                        android:id="@+id/btn_delete"
                        style="@style/KeyButton"
                        android:textColor="@color/textColor"
                        android:background="?attr/selectableItemBackground"
                        android:text="âŒ«" />
                </GridLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</LinearLayout>
