<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    android:id="@+id/cardFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/transferBg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_card"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />



    <View
        android:id="@+id/card_visa_card"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/cardvisa"
        android:transitionName="card_transition"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_bar_card"
        app:layout_constraintVertical_bias="0"
        />

    <View
        android:id="@+id/cardLine"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="#262626"
        app:layout_constraintVertical_bias="0.12"
        app:layout_constraintBottom_toBottomOf="@+id/card_visa_card"
        app:layout_constraintEnd_toEndOf="@+id/card_visa_card"
        app:layout_constraintStart_toStartOf="@+id/card_visa_card"
        app:layout_constraintTop_toTopOf="@+id/card_visa_card" />

    <TextView
        android:id="@+id/card_code16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4098 1111 1111 1111"
        android:layout_marginStart="20dp"
        android:textSize="25sp"
        android:textColor="@color/white"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintBottom_toBottomOf="@+id/card_visa_card"
        app:layout_constraintStart_toStartOf="@+id/card_visa_card"
        app:layout_constraintTop_toBottomOf="@+id/cardLine" />

    <ImageView
        android:id="@+id/btnCopy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_copy24"
        app:layout_constraintBottom_toBottomOf="@+id/card_code16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/card_code16"
        app:layout_constraintTop_toTopOf="@+id/card_code16"
        app:tint="#575757" />

    <TextView
        android:id="@+id/txtDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11/11"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintBottom_toBottomOf="@id/card_visa_card"
        app:layout_constraintStart_toStartOf="@+id/card_code16"
        app:layout_constraintTop_toBottomOf="@+id/card_code16" />

    <TextView
        android:id="@+id/txtDateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tarix"
        android:textColor="#6A6A6A"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/card_visa_card"
        app:layout_constraintStart_toStartOf="@+id/txtDate"
        app:layout_constraintTop_toBottomOf="@+id/txtDate" />

    <!-- CVV Container (FrameLayout ilə sticker üçün) -->
    <FrameLayout
        android:id="@+id/cvvContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtDate"
        app:layout_constraintTop_toTopOf="@+id/txtDate">

        <!-- CVV nömrəsi (altda) -->
        <TextView
            android:id="@+id/txtCvvNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="111"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp" />

        <!-- STICKER OVERLAY (üstdə) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cvvStickerOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:elevation="6dp"
            app:cardCornerRadius="6dp"
            app:cardBackgroundColor="#E0E0E0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
            android:background="@color/bottom_nav_icon_tint"
                android:padding="4dp">

                <!-- Göz ikonu -->
                <ImageView
                    android:id="@+id/imgCvvEye"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_emoji"
                    android:layout_marginEnd="4dp" />

                <!-- Nöqtələr -->
                <ImageView
                    android:id="@+id/imgCvvAlien"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_alien"
                    android:layout_marginEnd="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </FrameLayout>

    <TextView
        android:id="@+id/txtCvv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CVV"
        android:textColor="#6A6A6A"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/card_visa_card"
        app:layout_constraintEnd_toEndOf="@+id/cvvContainer"
        app:layout_constraintStart_toStartOf="@+id/cvvContainer"
        app:layout_constraintTop_toBottomOf="@+id/txtDate" />

    <!-- 1. Plastik kartı blokla -->
    <ImageView
        android:id="@+id/img_block"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/baseline_block_flipped_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_visa_card"
        app:tint="@color/textColor" />

    <TextView
        android:id="@+id/txt_block"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Plastik kartı blokla"
        android:textSize="16sp"
        android:textColor="@color/textColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_block"
        app:layout_constraintTop_toTopOf="@id/img_block" />

    <TextView
        android:id="@+id/txt_block_msg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="İstənilən vaxt onu blokdan çıxara bilərsiniz"
        android:textSize="13sp"
        android:textColor="#808080"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txt_block"
        app:layout_constraintTop_toBottomOf="@id/txt_block" />

    <!-- 2. Kredit limitini artırmaq -->
    <ImageView
        android:id="@+id/img_increase_limit"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/baseline_credit_card_24"
        app:layout_constraintStart_toStartOf="@id/img_block"
        app:layout_constraintTop_toBottomOf="@id/txt_block_msg"
        app:tint="@color/textColor" />

    <TextView
        android:id="@+id/txt_increase_limit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Kredit limitini artırmaq"
        android:textSize="16sp"
        android:textColor="@color/textColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/txt_block"
        app:layout_constraintTop_toTopOf="@id/img_increase_limit" />

    <TextView
        android:id="@+id/txt_increase_limit_msg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Cari limit: 0 ₼"
        android:textSize="13sp"
        android:textColor="#808080"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txt_increase_limit"
        app:layout_constraintTop_toBottomOf="@id/txt_increase_limit" />

    <!-- 3. Google Pay-i qur -->
    <ImageView
        android:id="@+id/img_google_pay"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/baseline_contactles_24"
        app:layout_constraintStart_toStartOf="@id/img_block"
        app:layout_constraintTop_toBottomOf="@id/txt_increase_limit_msg"
        app:tint="@color/textColor" />

    <TextView
        android:id="@+id/txt_google_pay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Google Pay-i qur"
        android:textSize="16sp"
        android:textColor="@color/textColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/txt_block"
        app:layout_constraintTop_toTopOf="@id/img_google_pay" />

    <TextView
        android:id="@+id/txt_google_pay_msg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Kartı əlavə olunub"
        android:textSize="13sp"
        android:textColor="#808080"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txt_google_pay"
        app:layout_constraintTop_toBottomOf="@id/txt_google_pay" />

    <!-- 4. Kartın Google Pay dizaynı -->
    <ImageView
        android:id="@+id/img_gpay_design"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/baseline_palette"
        app:layout_constraintStart_toStartOf="@id/img_block"
        app:layout_constraintTop_toBottomOf="@id/txt_google_pay_msg"
        app:tint="@color/textColor" />

    <TextView
        android:id="@+id/txt_gpay_design"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Kartın Google Pay dizaynı"
        android:textSize="16sp"
        android:textColor="@color/textColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/txt_block"
        app:layout_constraintTop_toTopOf="@id/img_gpay_design" />

    <!-- 5. Kartınızın statusunu təqmilləşdirin 😎 -->
    <ImageView
        android:id="@+id/img_upgrade_status"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/baseline_star"
        app:layout_constraintStart_toStartOf="@id/img_block"
        app:layout_constraintTop_toBottomOf="@id/txt_gpay_design"
        app:tint="@color/textColor" />

    <TextView
        android:id="@+id/txt_upgrade_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Kartınızın statusunu təqmilləşdirin 😎"
        android:textSize="16sp"
        android:textColor="@color/textColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/txt_block"
        app:layout_constraintTop_toTopOf="@id/img_upgrade_status" />

    <!-- 6. PIN-kod dəyişmək -->
    <ImageView
        android:id="@+id/img_change_pin"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/baseline_more_horiz"
        app:layout_constraintStart_toStartOf="@id/img_block"
        app:layout_constraintTop_toBottomOf="@id/txt_upgrade_status"
        app:tint="@color/textColor" />

    <TextView
        android:id="@+id/txt_change_pin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="PIN-kod dəyişmək"
        android:textSize="16sp"
        android:textColor="@color/textColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/txt_block"
        app:layout_constraintTop_toTopOf="@id/img_change_pin" />

    <TextView
        android:id="@+id/txt_change_pin_msg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Kart və tətbiqlər"
        android:textSize="13sp"
        android:textColor="#808080"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txt_change_pin"
        app:layout_constraintTop_toBottomOf="@id/txt_change_pin" />

    <!-- 7. Təhlükəsizlik ayarları -->
    <ImageView
        android:id="@+id/img_security"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/baseline_shield"
        app:layout_constraintStart_toStartOf="@id/img_block"
        app:layout_constraintTop_toBottomOf="@id/txt_change_pin_msg"
        app:tint="@color/textColor" />

    <TextView
        android:id="@+id/txt_security"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Təhlükəsizlik ayarları"
        android:textSize="16sp"
        android:textColor="@color/textColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/txt_block"
        app:layout_constraintTop_toTopOf="@id/img_security" />

    <TextView
        android:id="@+id/txt_security_msg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Bankomatlar, təmirsiz, maqnit zolağı"
        android:textSize="13sp"
        android:textColor="#808080"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txt_security"
        app:layout_constraintTop_toBottomOf="@id/txt_security" />

    <!-- 8. Abunə idarəetməsi -->
    <ImageView
        android:id="@+id/img_subscription"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/baseline_notification_24"
        app:layout_constraintStart_toStartOf="@id/img_block"
        app:layout_constraintTop_toBottomOf="@id/txt_security_msg"
        app:tint="@color/textColor" />

    <TextView
        android:id="@+id/txt_subscription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Abunə idarəetməsi"
        android:textSize="16sp"
        android:textColor="@color/textColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/txt_block"
        app:layout_constraintTop_toTopOf="@id/img_subscription" />

    <TextView
        android:id="@+id/txt_subscription_msg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Karta bağlı olan bütün servislər"
        android:textSize="13sp"
        android:textColor="#808080"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txt_subscription"
        app:layout_constraintTop_toBottomOf="@id/txt_subscription" />





</androidx.constraintlayout.widget.ConstraintLayout>