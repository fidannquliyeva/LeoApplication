<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_2"
    android:orientation="vertical"
    tools:context=".presentation.ui.fragments.loginAuth.PinLoginFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/gradient_login">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/helpPin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="#33E0DFDF"
            android:drawableLeft="@drawable/icons8message30"
            android:drawableTint="@color/white"
            android:text="@string/d_st_k"
            android:textSize="12sp"
            android:textColor="@color/textColor" />

        <!-- ✅ YENİ: Dairəvi Avatar -->
        <androidx.cardview.widget.CardView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="37.5dp"
            app:cardElevation="4dp">

            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/icons8testaccount80"
                android:scaleType="centerCrop"
                android:contentDescription="@string/istifadeci_sekli" />

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/phoneCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/background"
        app:cardCornerRadius="32dp"
        app:cardElevation="4dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="16dp">

                <TextView
                    android:id="@+id/phoneNumberText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pin_kod"
                    android:textColor="#888888"
                    android:textSize="23sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.15" />

                <LinearLayout
                    android:id="@+id/pinLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/phoneNumberText">

                    <ImageView
                        android:id="@+id/pin1"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_margin="8dp"
                        android:src="@drawable/paw" />

                    <ImageView
                        android:id="@+id/pin2"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_margin="8dp"
                        android:src="@drawable/paw" />

                    <ImageView
                        android:id="@+id/pin3"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_margin="8dp"
                        android:src="@drawable/paw" />

                    <ImageView
                        android:id="@+id/pin4"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_margin="8dp"
                        android:src="@drawable/paw" />
                </LinearLayout>

                <GridLayout
                    android:id="@+id/numberPad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="3"
                    android:rowCount="4"
                    android:useDefaultMargins="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/pinLayout"
                    app:layout_constraintVertical_bias="0.6">

                    <Button
                        android:id="@+id/btn_1"
                        style="@style/KeyButton"
                        android:textColor="@color/textColor"
                        android:background="?attr/selectableItemBackground"
                        android:text="@string/_1" />

                    <Button
                        android:id="@+id/btn_2"
                        style="@style/KeyButton"
                        android:textColor="@color/textColor"
                        android:background="?attr/selectableItemBackground"
                        android:text="@string/_2" />

                    <Button
                        android:id="@+id/btn_3"
                        style="@style/KeyButton"
                        android:textColor="@color/textColor"
                        android:background="?attr/selectableItemBackground"
                        android:text="@string/_3" />

                    <Button
                        android:id="@+id/btn_4"
                        style="@style/KeyButton"
                        android:textColor="@color/textColor"
                        android:background="?attr/selectableItemBackground"
                        android:text="@string/_4" />

                    <Button
                        android:id="@+id/btn_5"
                        style="@style/KeyButton"
                        android:textColor="@color/textColor"
                        android:background="?attr/selectableItemBackground"
                        android:text="@string/_5" />

                    <Button
                        android:id="@+id/btn_6"
                        style="@style/KeyButton"
                        android:textColor="@color/textColor"
                        android:background="?attr/selectableItemBackground"
                        android:text="@string/_6" />

                    <Button
                        android:id="@+id/btn_7"
                        style="@style/KeyButton"
                        android:textColor="@color/textColor"
                        android:background="?attr/selectableItemBackground"
                        android:text="@string/_7" />

                    <Button
                        android:id="@+id/btn_8"
                        style="@style/KeyButton"
                        android:textColor="@color/textColor"
                        android:background="?attr/selectableItemBackground"
                        android:text="@string/_8" />

                    <Button
                        android:id="@+id/btn_9"
                        style="@style/KeyButton"
                        android:textColor="@color/textColor"
                        android:background="?attr/selectableItemBackground"
                        android:text="@string/_9" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_columnWeight="1" />

                    <Button
                        android:id="@+id/btn_0"
                        style="@style/KeyButton"
                        android:textColor="@color/textColor"
                        android:background="?attr/selectableItemBackground"
                        android:text="@string/_0" />

                    <Button
                        android:id="@+id/btn_delete"
                        style="@style/KeyButton"
                        android:textColor="@color/textColor"
                        android:background="?attr/selectableItemBackground"
                        android:text="@string/delete" />
                </GridLayout>

                <TextView
                    android:id="@+id/txt_forget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pin_kodu_unutmusunuz"
                    android:textSize="16sp"
                    android:textColor="@color/textColor"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/numberPad" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</LinearLayout>