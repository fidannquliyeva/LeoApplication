<?xml version="1.0" encoding="utf-8"?>

<com.example.leoapplication.presentation.ui.fragments.CollapsibleToolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/motionLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/scene_swipe_up"
    android:minHeight="70dp"
    android:fitsSystemWindows="false"
    app:layout_scrollFlags="scroll|enterAlways|snap|exitUntilCollapsed">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:layout_collapseMode="pin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradientcard">

        <TextView
            android:id="@+id/balance_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00$"
            android:textColor="@color/black"
            android:textSize="35sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3" />


        <ImageView
            android:id="@+id/add_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:clickable="true"
            android:src="@drawable/icons8_add_50"
            app:layout_constraintEnd_toStartOf="@+id/next_button"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/balance_num" />

        <ImageView
            android:id="@+id/next_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:clickable="true"
            android:src="@drawable/icons8_next_button_48"
            app:layout_constraintEnd_toStartOf="@+id/wallet_button"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@id/add_button"
            app:layout_constraintTop_toBottomOf="@+id/balance_num" />

        <ImageView
            android:id="@+id/wallet_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:src="@drawable/button_wallet"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@id/next_button"
            app:layout_constraintTop_toTopOf="@+id/next_button" />

        <TextView
            android:id="@+id/txt_add_button"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Balansın artırılması"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintVertical_bias="0.03"
            app:layout_constraintBottom_toTopOf="@+id/card_visa"
            app:layout_constraintEnd_toEndOf="@+id/add_button"
            app:layout_constraintStart_toStartOf="@+id/add_button"
            app:layout_constraintTop_toBottomOf="@+id/add_button" />

        <TextView
            android:id="@+id/txt_next_button"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Karta köçürmə"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintVertical_bias="0.03"
            app:layout_constraintBottom_toTopOf="@+id/card_visa"
            app:layout_constraintEnd_toEndOf="@+id/next_button"
            app:layout_constraintStart_toEndOf="@+id/add_button"
            app:layout_constraintTop_toBottomOf="@+id/next_button" />

        <TextView
            android:id="@+id/txt_wallet_button"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Digər ödənişlər"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintVertical_bias="0.03"
            app:layout_constraintBottom_toTopOf="@+id/card_visa"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/next_button"
            app:layout_constraintTop_toBottomOf="@+id/wallet_button" />

        <View
            android:id="@+id/card_visa"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="25dp"
            android:background="@drawable/card"
            android:transitionName="card_transition"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <TextView
            android:id="@+id/balance_num_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00$"
            android:layout_centerHorizontal="true"
            app:layout_constraintHorizontal_bias="0.5"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginTop="24dp"
            app:layout_constraintVertical_bias="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>



        <TextView
            android:id="@+id/card_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="VISA"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/card_visa"
            app:layout_constraintTop_toTopOf="@+id/card_visa" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.example.leoapplication.presentation.ui.fragments.CollapsibleToolbar>