<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/white"
    tools:context=".presentation.ui.fragments.loginAuth.AboutLeoFragment">

    <ImageView
        android:id="@+id/btnGoBack"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/baseline_arrow_back_24"
        android:clickable="true"
        app:layout_constraintVertical_bias="0.06"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bank_haqq_nda"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnGoBack"
        app:layout_constraintVertical_bias="0.03" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/leobank_az_rbaycan_n_ilk_r_q_msal_bank_d_r_biz_b_t_n_bank_prosedurlar_n_sad_l_dirib_lveri_li_bir_t_tbiqi_v_s_rf_li_kredit_kart_n_yaratd_q"

        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_about"
        app:layout_constraintVertical_bias="0.03" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="#999999"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.01" />

    <ImageView
        android:id="@+id/img_rule"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/img"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line"
        app:layout_constraintVertical_bias="0.04" />

    <TextView
        android:id="@+id/txt_rule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/rtl_r_v_xidm_t_qaydalar"
        android:textSize="18sp"
        android:background="?attr/selectableItemBackground"
        app:layout_constraintBottom_toBottomOf="@+id/img_rule"
        app:layout_constraintStart_toEndOf="@+id/img_rule"
        app:layout_constraintTop_toTopOf="@+id/img_rule" />


    <ImageView
        android:id="@+id/img_credit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/img_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_rule"
        app:layout_constraintVertical_bias="0.04" />

    <TextView
        android:id="@+id/txt_credit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="@string/kredit_b_rosuna_edil_n_sor_uya_raz_l_q"
        android:textSize="18sp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground"
        app:layout_constraintBottom_toBottomOf="@+id/img_credit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_credit"
        app:layout_constraintTop_toTopOf="@+id/img_credit" />

    <ImageView
        android:id="@+id/img_ASAN"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/img_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_credit"
        app:layout_constraintVertical_bias="0.04" />

    <TextView
        android:id="@+id/txt_ASAN"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground"
        android:text="@string/asan_finans_raz_l_q_riz_si"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_ASAN"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_ASAN"
        app:layout_constraintTop_toTopOf="@+id/img_ASAN" />

    <ImageView
        android:id="@+id/img_tarif"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/img_3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_ASAN"
        app:layout_constraintVertical_bias="0.04" />

    <TextView
        android:id="@+id/txt_tarif"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="?attr/selectableItemBackground"
        android:text="@string/tarifl_rr"
        android:clickable="true"
        android:focusable="true"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_tarif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_tarif"
        app:layout_constraintTop_toTopOf="@+id/img_tarif" />

    <ImageView
        android:id="@+id/img_security"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/img_4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_tarif"
        app:layout_constraintVertical_bias="0.04" />

    <TextView
        android:id="@+id/txt_security"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="@string/gizlilik_siyas_ti"
        android:background="?attr/selectableItemBackground"
        android:textSize="18sp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="@+id/img_security"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_security"
        app:layout_constraintTop_toTopOf="@+id/img_security" />


</androidx.constraintlayout.widget.ConstraintLayout>