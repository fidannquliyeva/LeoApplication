<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_2"
    tools:context=".LoginWithNumberFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/gradient_login">

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#5AC8C6C6"
            android:drawableStart="@drawable/baseline_addchart_24"
            android:text="Dəstək"
            android:textColor="@color/black"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="28dp"
            android:text="Mobil nömrənizi daxil edin"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/phoneCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="32dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@android:color/white">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/phoneNumberText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+994"
                    android:textColor="#000000"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="30dp"/>

                <TextView
                    android:id="@+id/infoText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="İrəli düyməsini sıxmaqla siz şərtləri və tarifləri qəbul edirsiniz"
                android:textColor="#888888"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginTop="8dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/nextButton"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/black"
                    android:text="İrəli"
                    android:textColor="#FFFFFF"/>

                <GridLayout
                    android:id="@+id/numberPad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:columnCount="3"
                    android:rowCount="4"
                    android:useDefaultMargins="true"
                    android:alignmentMode="alignMargins">

                    <Button android:id="@+id/btn_1" android:text="1" style="@style/KeyButton" />
                    <Button android:id="@+id/btn_2" android:text="2" style="@style/KeyButton" />
                    <Button android:id="@+id/btn_3" android:text="3" style="@style/KeyButton" />
                    <Button android:id="@+id/btn_4" android:text="4" style="@style/KeyButton" />
                    <Button android:id="@+id/btn_5" android:text="5" style="@style/KeyButton" />
                    <Button android:id="@+id/btn_6" android:text="6" style="@style/KeyButton" />
                    <Button android:id="@+id/btn_7" android:text="7" style="@style/KeyButton" />
                    <Button android:id="@+id/btn_8" android:text="8" style="@style/KeyButton" />
                    <Button android:id="@+id/btn_9" android:text="9" style="@style/KeyButton" />
                    <View android:layout_width="0dp" android:layout_height="0dp" />
                    <Button android:id="@+id/btn_0" android:text="0" style="@style/KeyButton" />
                    <Button android:id="@+id/btn_delete" android:text="⌫" style="@style/KeyButton" />
                </GridLayout>

            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

</LinearLayout>
