<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#FFFFFF"
    android:padding="24dp"
    tools:context=".presentation.ui.fragments.loginAuth.LoadingFragment">

    <!-- Yuxarıdakı illüstrasiya -->
    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/imgIllustration"
        android:layout_width="260dp"
        android:layout_height="400dp"
        android:src="@drawable/leo_animasiya3"
        android:contentDescription="Sənədlər hazırlanır"
        android:layout_marginBottom="32dp" />

    <!-- Başlıq -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/s_n_dl_r_sizin_n_haz_rlan_r"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <!-- Alt mətn -->
    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bir_d_qiq_d_n_az_k_c_k"
        android:textColor="#888888"
        android:textSize="14sp"
        android:layout_marginBottom="24dp" />


    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="220dp"
        android:layout_height="10dp"
        android:indeterminate="false"
        android:max="100"
        android:progress="0"
        android:background="@drawable/progges_bar"

        />

</LinearLayout>