<com.google.android.material.appbar.CollapsingToolbarLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/motionLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/scene_swipe_up"
    android:minHeight="50dp"
    android:fitsSystemWindows="false"
    app:layout_scrollFlags="scroll|enterAlways|snap|exitUntilCollapsed">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:layout_collapseMode="pin"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradientcard">

        <TextView
            android:id="@+id/balance_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00$"
            android:textColor="@color/black"
            android:textSize="35sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0"/>

        <!-- Digər elementlər buraya -->



            <ImageView
                android:id="@+id/add_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/icons8_add_50"
                app:layout_constraintEnd_toStartOf="@+id/next_button"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/balance_num"
                android:layout_marginTop="15dp"
                android:clickable="true"/>

            <ImageView
                android:id="@+id/next_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/icons8_next_button_48"
                app:layout_constraintEnd_toStartOf="@+id/wallet_button"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@id/add_button"
                app:layout_constraintTop_toBottomOf="@+id/balance_num"
                android:layout_marginTop="15dp"
                android:clickable="true"
                />

            <ImageView
                android:id="@+id/wallet_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/button_wallet"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@id/next_button"
                app:layout_constraintTop_toTopOf="@+id/next_button"
                android:clickable="true"/>

            <TextView
                android:id="@+id/txt_add_button"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Balansın artırılması"
                app:layout_constraintEnd_toEndOf="@+id/add_button"
                app:layout_constraintStart_toStartOf="@+id/add_button"
                app:layout_constraintTop_toBottomOf="@+id/add_button"
                android:textSize="18sp"
                android:gravity="center"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/txt_next_button"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Karta köçürmə"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/next_button"
                app:layout_constraintStart_toEndOf="@+id/add_button"
                app:layout_constraintTop_toBottomOf="@+id/next_button" />

            <TextView
                android:id="@+id/txt_wallet_button"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Digər ödənişlər"
                android:textSize="18sp"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/next_button"
                app:layout_constraintTop_toBottomOf="@+id/wallet_button" />

            <View
                android:id="@+id/card_visa"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/card"
                android:layout_marginHorizontal="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/card_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VISA"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:layout_marginEnd="20dp"
                android:textStyle="bold"
               app:layout_constraintEnd_toEndOf="@id/card_visa"

                app:layout_constraintTop_toTopOf="@+id/card_visa" />



    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.appbar.CollapsingToolbarLayout>