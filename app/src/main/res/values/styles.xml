<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="KeyButton">
        <!-- Genişlik 0dp olmalıdır ki, columnWeight işləsin -->
        <item name="android:layout_width">0dp</item>
        <!-- Hündürlük sabit saxlanılır -->
        <item name="android:layout_height">60dp</item>
        <!-- Sütun çəkisi: bərabər paylansın -->
        <item name="android:layout_columnWeight">1</item>
        <!-- Mətn ölçüsü -->
        <item name="android:textSize">24sp</item>
        <!-- Mətn rengi -->
        <item name="android:textColor">#000000</item>
        <!-- Arxa fon -->
        <item name="android:backgroundTint">#EEEEEE</item>
        <!-- Kənar radius və padding istəyə bağlı -->
        <item name="android:padding">8dp</item>
    </style>



</resources>
